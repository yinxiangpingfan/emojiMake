.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 50rpx;
  background-color: #f7f7f7;
  min-height: 100vh;
  box-sizing: border-box;
}

.logo-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 100rpx;
}

.logo {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.form {
  width: 100%;
  margin-bottom: 60rpx;
}

.form-item {
  display: flex;
  align-items: center;
  width: 100%;
  height: 100rpx;
  padding: 0 30rpx;
  background-color: #fff;
  border-radius: 50rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.05);
  box-sizing: border-box;
}

.icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.input {
  flex: 1;
  font-size: 30rpx;
  color: #333;
}

.toggle-password {
  font-size: 28rpx;
  color: #2980B9;
  padding: 10rpx;
}

.login-btn {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 50rpx;
  font-size: 34rpx;
  font-weight: bold;
  background: linear-gradient(to right, #6DD5FA, #2980B9);
  color: #fff;
  box-shadow: 0 8rpx 20rpx rgba(41, 128, 185, 0.3);
}

.links {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  margin-top: 40rpx;
  font-size: 28rpx;
  color: #999;
}

.link {
  color: #2980B9;
  padding: 0 20rpx;
}

.divider {
  color: #ccc;
}